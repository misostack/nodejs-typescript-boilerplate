{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "target": "ES5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts" ]
}